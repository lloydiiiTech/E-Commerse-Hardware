</header>
<!-- Header Section End -->
<section class="breadcrumb-section" style="background-image: url('/img/breadcrumb.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center p-5">
                <div class="breadcrumb__text">
                    <h2 style="color: aliceblue;">Hardwareâ€™s Homepage</h2>
                    <div class="breadcrumb__option"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row m-2">
    <% products.forEach(product => { %>
        <div class="col-md-2  mx-auto m-4">
            <div class="card "style="border: 3px solid #be430a;">
                <div class="imgcard m-4"><img src="<%= product.Picture %>" class="card-img-top" alt="<%= product.ProductName %>"></div>
                <div class="card-body" >
                    <h4 class="card-title" style="font-family: 'Times New Roman';"><%= product.ProductName %></h4>
                    <h6 class="card-text">Price: $<%= product.Price %></h6>

                    
                    <!-- Add form to place the order -->
                    <form action="/order" method="POST"  onsubmit="return confirmOrder()"> 
                        <input type="hidden" name="product_id" value="<%= product.ProductID %>">
                        <input type="hidden" name="user_id" value="<%= userId %>">
                        <input type="number" name="quantity" value="1" min="1" class="form-control m-2" style="width: 70px;">
                        <a href="/product/<%= product.ProductID %>/<%= userId %>" class="btn btn-primary m-2">View Details</a>
                        <button type="submit" class="btn btn-success m-2">Add to Order</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>



<script>
    // JavaScript function to show confirmation dialog
    function confirmOrder() {
        return confirm('Are you sure you want to place this order?');
    }
</script>

