    <div class="container-cart">
        <% if (cartItems && cartItems.length > 0) { %> 
            <form id="checkoutForm" action="/checkout" method="POST" onsubmit="return validateCheckout()">
                <% cartItems.forEach(item => { %>
                    <div class="product-row">
                        <div>
                            <input style="width: 50px;" type="checkbox" name="selectedProducts" value="<%= item.CartID %>" onchange="toggleQuantityInput(this)">
                        </div>
                        <div>
                            <img style="width: 300px;" src="<%= item.Picture %>" alt="<%= item.ProductName %>">
                        </div>
                        <div class="product-info">
                            <strong><%= item.ProductName %></strong>
                            <p>Price: P<%= parseFloat(item.Price).toFixed(2) %></p> 
                            <p>Total Price: <span class="total-price" id="total-price-<%= item.CartID %>">$<%= (parseFloat(item.Price) * item.Quantity).toFixed(2) %></span></p>
                        </div>
                        <div class="product-actions">
                            <input type="text" name="ProductID[<%= item.CartID %>]" value="<%= item.ProductID %>" hidden>
                            <input type="number" name="quantities[<%= item.CartID %>]" value="<%= item.Quantity %>" min="1" required 
                                onchange="updateTotal(this, parseFloat('<%= item.Price %>'))" disabled>
                            <a href="/cart/delete/<%= item.CartID %>" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                        </div>
                    </div>
                <% }) %>
                <button type="submit" class="checkout-btn">Proceed to Checkout</button>
                <div class="error-message" id="error-message" style="display:none;"></div>
            </form>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>

    <script>
        function toggleQuantityInput(checkbox) {
            const quantityInput = checkbox.closest('.product-row').querySelector('input[type="number"]');
            quantityInput.disabled = !checkbox.checked; // Disable the quantity input if not checked
        }

        function updateTotal(quantityInput, price) {
            const quantity = Number(quantityInput.value);
            const totalPrice = (price * quantity).toFixed(2); 
            const cartId = quantityInput.closest('.product-row').querySelector('.total-price').id.split('-')[2]; 
            document.getElementById(`total-price-${cartId}`).textContent = `$${totalPrice}`; 
        }

        function validateCheckout() {
            const checkboxes = document.querySelectorAll('input[name="selectedProducts"]:checked');
            const errorMessage = document.getElementById('error-message');
            
            if (checkboxes.length === 0) {
                errorMessage.textContent = 'No items selected for checkout.';
                errorMessage.style.display = 'block';
                return false; // Prevent form submission
            } else {
                errorMessage.style.display = 'none';
                return true; // Allow form submission
            }
        }
    </script>
