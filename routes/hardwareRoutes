const express = require('express');
const router = express.Router();
const productController = require('../controllers/productController');
const cartController = require('../controllers/cartController'); // Add this line

router.get('/', productController.index);
router.get('/index', productController.index);
router.post('/add/cart/:productID', productController.addToCart);
router.get('/cart', productController.cart);
router.get('/cart/delete/:cartId', productController.deleteItemFromCart);
// router.get('/checkout', productController.getCheckoutPage);
router.get('/checkoutprocess', productController.checkoutCart);

// Define the checkout route
router.post('/checkout', productController.checkout);


router.post('/place-order', productController.placeOrder);


module.exports = router;
